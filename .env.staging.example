# Staging Environment Variables

# Django Settings
DEBUG=True
SECRET_KEY=staging-secret-key-change-this
ALLOWED_HOSTS=staging.yourdomain.com,localhost,127.0.0.1
FRONTEND_URL=https://staging.yourdomain.com

# Database (Container PostgreSQL)
POSTGRES_DB=bp_staging_db
POSTGRES_USER=bp_staging_user
POSTGRES_PASSWORD=bp_staging_secure_password
DATABASE_URL=postgresql://bp_staging_user:bp_staging_secure_password@postgres:5432/bp_staging_db

# External Staging Database (Alternative to container)
# DATABASE_URL=postgresql://username:password@staging-db-host:5432/staging_dbname

# Cache & Queue
REDIS_URL=redis://redis:6379/0

# Cache Fallback (when Redis not available: dummy|database|locmem)
FALLBACK_CACHE_BACKEND=database

# SSL & Domain
DOMAIN=staging.yourdomain.com
SSL_EMAIL=admin@yourdomain.com

# Static Files Handler (caddy|s3)
STATIC_FILES_HANDLER=caddy

# Email Settings
USE_ASYNC_EMAIL=True

# Email Configuration (SendGrid SMTP - Test environment)
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD=SG.your_test_sendgrid_api_key
DEFAULT_FROM_EMAIL=staging@yourdomain.com

# Monitoring & Error Tracking
SENTRY_DSN=https://your-staging-sentry-dsn@sentry.io/project-id
APP_VERSION=1.0.0

# pgAdmin Configuration (Staging)
PGADMIN_DEFAULT_EMAIL=admin@domain.com
PGADMIN_DEFAULT_PASSWORD=staging123

# ============================================================================
# AWS CONFIGURATION
# ============================================================================
# Used for both Static Files (S3) and Backup (S3)
# AWS credentials are shared between services

# AWS Credentials (via aws configure or environment variables)
# AWS_ACCESS_KEY_ID=your-aws-access-key-id
# AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# Static Files S3 Configuration (when STATIC_FILES_HANDLER=s3)
# AWS_STORAGE_BUCKET_NAME=your-static-files-bucket
# AWS_S3_CUSTOM_DOMAIN=cdn.yourdomain.com
# AWS_DEFAULT_ACL=public-read
# AWS_S3_OBJECT_PARAMETERS_CacheControl=max-age=86400

# AWS Region (used by both static files and backups)
AWS_REGION=eu-central-1

# Backup S3 Configuration (optional)
OFFSITE_BACKUP_ENABLED=false
AWS_S3_BACKUP_BUCKET=your-backups-bucket  # Different bucket for backups


# Social Authentication (OAuth Providers) - Staging
# Google OAuth (Test credentials)
GOOGLE_OAUTH2_CLIENT_ID=your-staging-google-client-id
GOOGLE_OAUTH2_CLIENT_SECRET=your-staging-google-client-secret

# Facebook OAuth (Test app)
FACEBOOK_APP_ID=your-staging-facebook-app-id
FACEBOOK_APP_SECRET=your-staging-facebook-app-secret

# Apple OAuth (Development team)
APPLE_CLIENT_ID=your-staging-apple-client-id
APPLE_SECRET=your-staging-apple-private-key
APPLE_KEY_ID=your-staging-apple-key-id
APPLE_TEAM_ID=your-staging-apple-team-id

# ============================================================================
# BACKUP CONFIGURATION
# ============================================================================

# PostgreSQL Backup
POSTGRES_CONTAINER=bp_postgres
# Development: /d/opt/backups/postgres (Windows Git Bash)
# Production: /opt/backups/postgres (Linux VPS)
BACKUP_DIR=/opt/backups/postgres
BACKUP_RETENTION_DAYS=7

# Media Backup
MEDIA_BACKUP_DIR=/opt/backups/media
MEDIA_DIR=./backend/media

# Backup Notifications (Optional)
BACKUP_NOTIFY_EMAIL=your-email@example.com
