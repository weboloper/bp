# Staging Environment Variables

# Django Settings
DEBUG=True
SECRET_KEY=staging-secret-key-change-this-in-production
ALLOWED_HOSTS=staging.yourdomain.com,www.staging.yourdomain.com,localhost,127.0.0.1

# Database (Staging Container)
POSTGRES_DB=bp_staging_db
POSTGRES_USER=bp_staging_user
POSTGRES_PASSWORD=bp_staging_secure_password

# SSL & Domain (Staging)
DOMAIN=staging.yourdomain.com
SSL_EMAIL=your-email@domain.com

# Optional: External Staging Database (instead of container)
# DATABASE_URL=postgresql://username:password@staging-db-host:5432/staging_dbname

# Optional: Email Settings (for testing notifications)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=your-staging-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
# EMAIL_USE_TLS=True

# Optional: AWS S3 (for staging media files)
# AWS_ACCESS_KEY_ID=your-staging-aws-key
# AWS_SECRET_ACCESS_KEY=your-staging-aws-secret
# AWS_STORAGE_BUCKET_NAME=your-staging-bucket

# Optional: Third-party API Keys (staging/test keys)
# STRIPE_PUBLIC_KEY=pk_test_...
# STRIPE_SECRET_KEY=sk_test_...
# SENDGRID_API_KEY=staging_key...

# Optional: Sentry (for error tracking in staging)
# SENTRY_DSN=https://staging-sentry-dsn...

# Analytics & Monitoring (staging)
# GOOGLE_ANALYTICS_ID=staging-ga-id
# MIXPANEL_TOKEN=staging-mixpanel-token