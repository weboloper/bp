# Staging Environment Variables

# Django Settings
DEBUG=True
SECRET_KEY=staging-secret-key-change-this
ALLOWED_HOSTS=staging.yourdomain.com,localhost,127.0.0.1

# Database (Container PostgreSQL)
POSTGRES_DB=bp_staging_db
POSTGRES_USER=bp_staging_user
POSTGRES_PASSWORD=bp_staging_secure_password
DATABASE_URL=postgresql://bp_staging_user:bp_staging_secure_password@postgres:5432/bp_staging_db

# Cache & Queue
REDIS_URL=redis://redis:6379/0

# SSL & Domain
DOMAIN=staging.yourdomain.com
SSL_EMAIL=admin@yourdomain.com

# Monitoring & Error Tracking
SENTRY_DSN=  # https://your-sentry-dsn@sentry.io/project-id
APP_VERSION=1.0.0

# Static Files Handler (caddy|nginx|s3)
STATIC_FILES_HANDLER=caddy

# pgAdmin Configuration (Staging)
PGADMIN_DEFAULT_EMAIL=admin@staging.local
PGADMIN_DEFAULT_PASSWORD=staging123

# AWS S3 Configuration (when STATIC_FILES_HANDLER=s3)
# AWS_ACCESS_KEY_ID=your-aws-access-key-id
# AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
# AWS_STORAGE_BUCKET_NAME=your-staging-s3-bucket
# AWS_S3_REGION_NAME=us-east-1
# AWS_S3_CUSTOM_DOMAIN=staging-cdn.yourdomain.com
# AWS_DEFAULT_ACL=public-read
# AWS_S3_OBJECT_PARAMETERS_CacheControl=max-age=86400

# Sentry Error Tracking (Optional for staging)
# SENTRY_DSN=https://your-staging-sentry-dsn@sentry.io/project-id
# APP_VERSION=1.0.0

# Email Settings (Staging/Testing)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=staging@yourdomain.com
# EMAIL_HOST_PASSWORD=your-staging-email-password

# External Staging Database (Alternative to container)
# DATABASE_URL=postgresql://username:password@staging-db-host:5432/staging_dbname