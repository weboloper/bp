# Production Environment Variables

# Django Settings
DEBUG=False
SECRET_KEY=your-super-strong-production-secret-key-change-this
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
FRONTEND_URL=https://yourdomain.com

# Database Options:
# Option 1: External Managed PostgreSQL (Recommended)
DATABASE_URL=postgresql://username:password@your-managed-db-host:5432/dbname

# Option 2: Container PostgreSQL (Alternative)
# Comment out DATABASE_URL above and uncomment these:
# POSTGRES_DB=bp_prod_db
# POSTGRES_USER=bp_prod_user
# POSTGRES_PASSWORD=bp_prod_secure_password
# DATABASE_URL=postgresql://bp_prod_user:bp_prod_secure_password@postgres:5432/bp_prod_db

# Cache & Queue
REDIS_URL=redis://redis:6379/0

# Cache Fallback (when Redis not available: dummy|database|locmem)
FALLBACK_CACHE_BACKEND=database

# SSL & Domain
DOMAIN=yourdomain.com
SSL_EMAIL=admin@yourdomain.com

# Static Files Handler (caddy|s3)
STATIC_FILES_HANDLER=caddy

# Email Settings
USE_ASYNC_EMAIL=True

# Email Configuration (SendGrid SMTP - Recommended for production)
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD=SG.your_production_sendgrid_api_key
DEFAULT_FROM_EMAIL=noreply@yourdomain.com


# Monitoring & Error Tracking
SENTRY_DSN=https://your-production-sentry-dsn@sentry.io/project-id
APP_VERSION=1.0.0

# Flower Monitoring (Production)
FLOWER_PASSWORD=your-secure-flower-password

# ============================================================================
# AWS CONFIGURATION
# ============================================================================
# Used for both Static Files (S3) and Backup (S3)
# AWS credentials are shared between services

# AWS Credentials (via aws configure or environment variables)
# AWS_ACCESS_KEY_ID=your-aws-access-key-id
# AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# Static Files S3 Configuration (when STATIC_FILES_HANDLER=s3)
# AWS_STORAGE_BUCKET_NAME=your-static-files-bucket
# AWS_S3_CUSTOM_DOMAIN=cdn.yourdomain.com
# AWS_DEFAULT_ACL=public-read
# AWS_S3_OBJECT_PARAMETERS_CacheControl=max-age=86400

# AWS Region (used by both static files and backups)
AWS_REGION=eu-central-1

# Backup S3 Configuration (optional)
OFFSITE_BACKUP_ENABLED=false
AWS_S3_BACKUP_BUCKET=your-backups-bucket  # Different bucket for backups


# Social Authentication (OAuth Providers) - Production
# Google OAuth (Production app)
GOOGLE_OAUTH2_CLIENT_ID=your-production-google-client-id
GOOGLE_OAUTH2_CLIENT_SECRET=your-production-google-client-secret

# Facebook OAuth (Production app)
FACEBOOK_APP_ID=your-production-facebook-app-id
FACEBOOK_APP_SECRET=your-production-facebook-app-secret

# Apple OAuth (Production team)
APPLE_CLIENT_ID=your-production-apple-client-id
APPLE_SECRET=your-production-apple-private-key
APPLE_KEY_ID=your-production-apple-key-id
APPLE_TEAM_ID=your-production-apple-team-id

# ============================================================================
# BACKUP CONFIGURATION
# ============================================================================

# PostgreSQL Backup
POSTGRES_CONTAINER=bp_postgres
# Development: /d/opt/backups/postgres (Windows Git Bash)
# Production: /opt/backups/postgres (Linux VPS)
BACKUP_DIR=/opt/backups/postgres
BACKUP_RETENTION_DAYS=7

# Media Backup
MEDIA_BACKUP_DIR=/opt/backups/media
MEDIA_DIR=./backend/media

# Backup Notifications (Optional)
BACKUP_NOTIFY_EMAIL=your-email@example.com
