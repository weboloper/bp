# Django Settings
DEBUG=True
SECRET_KEY=your-secret-key-here-change-this-in-production
DJANGO_SETTINGS_MODULE=config.settings

# Database (PostgreSQL for Docker)
POSTGRES_DB=bp_db
POSTGRES_USER=bp_user
POSTGRES_PASSWORD=bp_pass

# Database URL (alternative format)
# For PostgreSQL: postgresql://user:password@host:port/database
# For MySQL (cPanel): mysql://user:password@host:port/database
DATABASE_URL=postgresql://bp_user:bp_pass@postgres:5432/bp_db

# Redis
REDIS_URL=redis://redis:6379/0

# Email Settings (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# SSL & Domain (Production)
DOMAIN=localhost
SSL_EMAIL=your-email@gmail.com

# File Storage (Optional - for AWS S3, etc.)
# AWS_ACCESS_KEY_ID=your-aws-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=eu-central-1

# cPanel Specific (when deploying to shared hosting)
# DEBUG=False
# SECRET_KEY=very-strong-secret-key-for-production
# DATABASE_URL=mysql://cpanel_user:password@localhost/cpanel_database

# Development vs Production
# Development: Keep DEBUG=True, use sqlite or postgres
# Production: Set DEBUG=False, use strong SECRET_KEY, configure email
