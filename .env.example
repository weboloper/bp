# Development Environment Variables

# Django Settings
DEBUG=True
SECRET_KEY=dev-secret-key-change-this-in-production
DJANGO_SETTINGS_MODULE=config.settings

# Database (PostgreSQL Container)
POSTGRES_DB=bp_db
POSTGRES_USER=bp_user
POSTGRES_PASSWORD=bp_pass
DATABASE_URL=postgresql://bp_user:bp_pass@postgres:5432/bp_db

# Cache & Queue
REDIS_URL=redis://redis:6379/0

# Static Files Handler (caddy|nginx|whitenoise|s3)
STATIC_FILES_HANDLER=caddy

# SSL & Domain
DOMAIN=localhost
SSL_EMAIL=admin@example.com

# Monitoring & Error Tracking
SENTRY_DSN=  # https://your-sentry-dsn@sentry.io/project-id
APP_VERSION=1.0.0

# pgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@bp.local
PGADMIN_DEFAULT_PASSWORD=admin123

# Email Settings
USE_ASYNC_EMAIL=False

# Email Configuration (Universal SMTP - works with any provider)
# Leave empty for console backend in development
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# AWS S3 Configuration (when STATIC_FILES_HANDLER=s3)
# AWS_ACCESS_KEY_ID=your-aws-access-key-id
# AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
# AWS_STORAGE_BUCKET_NAME=your-dev-s3-bucket
# AWS_S3_REGION_NAME=us-east-1
# AWS_S3_CUSTOM_DOMAIN=dev-cdn.yourdomain.com
# AWS_DEFAULT_ACL=public-read
# AWS_S3_OBJECT_PARAMETERS_CacheControl=max-age=86400

# Sentry Error Tracking
SENTRY_DSN=  # https://your-sentry-dsn@sentry.io/project-id
APP_VERSION=1.0.0

# cPanel Alternative Configuration
# To use cPanel hosting, copy this file to .env and uncomment these lines:
# DEBUG=False
# USE_ASYNC_EMAIL=False
# STATIC_FILES_HANDLER=whitenoise
# DATABASE_URL=mysql://cpanel_user:password@localhost/cpanel_database
# EMAIL_HOST=mail.yourdomain.com
# EMAIL_HOST_USER=noreply@yourdomain.com
# EMAIL_HOST_PASSWORD=your_cpanel_email_password
