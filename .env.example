# Development Environment Variables

# Django Settings
DEBUG=True
SECRET_KEY=dev-secret-key-change-this-in-production
DJANGO_SETTINGS_MODULE=config.settings

# Database (PostgreSQL Container)
POSTGRES_DB=bp_db
POSTGRES_USER=bp_user
POSTGRES_PASSWORD=bp_pass
DATABASE_URL=postgresql://bp_user:bp_pass@postgres:5432/bp_db

# Cache & Queue
REDIS_URL=redis://redis:6379/0

# Static Files Handler (nginx|whitenoise|s3)
STATIC_FILES_HANDLER=nginx

# SSL & Domain
DOMAIN=localhost
SSL_EMAIL=admin@example.com

# pgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@bp.local
PGADMIN_DEFAULT_PASSWORD=admin123

# Email Settings (Optional - for development testing)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# AWS S3 Configuration (when STATIC_FILES_HANDLER=s3)
# AWS_ACCESS_KEY_ID=your-aws-access-key-id
# AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
# AWS_STORAGE_BUCKET_NAME=your-dev-s3-bucket
# AWS_S3_REGION_NAME=us-east-1
# AWS_S3_CUSTOM_DOMAIN=dev-cdn.yourdomain.com
# AWS_DEFAULT_ACL=public-read
# AWS_S3_OBJECT_PARAMETERS_CacheControl=max-age=86400

# Sentry Error Tracking (Optional - for development testing)
# SENTRY_DSN=https://your-dev-sentry-dsn@sentry.io/project-id
# APP_VERSION=1.0.0

# cPanel Alternative (copy this file to .env and modify for cPanel)
# DEBUG=False
# STATIC_FILES_HANDLER=whitenoise
# DATABASE_URL=mysql://cpanel_user:password@localhost/cpanel_database